<h1 class="center">Signup for Alpha Blog</h2>

<%=  render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
     <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
     
     <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :username %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :email %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter e-mail" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :password %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-10">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
          
          <div class="col-xs-4 col-xs-offset-3">
           [ <%= link_to "Cancel and return to articles", articles_path %> ]
          </div>
        </div>
        
        <% end %>
      


    </div>
</div>